@model IEnumerable<Grater.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Event's</h2>
@{ if (User.IsInRole("Admin"))
    { @Html.ActionLink("Manage Page", "AdminIndex")}
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table1-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ArticleTitle, "Details", new { id = item.ArticleId }, null)
                @Html.DisplayFor(modelItem => item.ThisDateTime)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>


           
        </tr>
    }

</table>
