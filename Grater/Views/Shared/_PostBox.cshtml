<dl class="dl-horizontal">
    <dt>
        Comment
    </dt>

    <dd>
        <div class="postBox">
            @using (Html.BeginForm("Add", "ArticleComment", FormMethod.Post, new { onsubmit = "return SubmitCommentContent()" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
      
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea name="CommentContent" id="CommentContent" required rows="5" style="width:100%;" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="hidden" name="ArticleId" value="@ViewBag.ArticleId" />
                            <input type="hidden" name="Rating" id="Rating" value="0" />
                            <input type="submit" id="btnRegister" name="btnRegister" value="Submit CommentContent" class="btn btn-warning" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </dd>

</dl>

