@model IEnumerable<Grater.Models.BeautyArticle>

@{
    ViewBag.Title = "Index";
}

<h2>Beauty articles</h2>

<p>
    @{ if (User.IsInRole("Admin"))
        { @Html.ActionLink("Manage Page", "AdminIndex")}
    }
        
    @{ if (User.IsInRole("Therapist"))
        { @Html.ActionLink("Create New", "Create")}
    }

</p>
<table class="table table1-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThisDateTime)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.ArticleTitle, "Details", new { id = item.ArticleId }, null)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ThisDateTime)
    </td>


</tr>
    }

</table>
